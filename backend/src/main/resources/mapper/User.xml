<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.UserMapper">
    <update id="update">
        update users
            <set>
                <if test="username != null">
                    username= #{username},
                </if>
                <if test="password != null">
                    password=#{password}
                </if>
            </set>
<where>
    username= #{username}
</where>


    </update>


</mapper>